{
    "dev": false,
    "log": {
        "level": "warn"
    },
    "project": {
        "title": "Fractal"
    },
    "server": {
        "port": 3000
    },
    "exporter": {

    },
    "components": {
        "path": "src/components",
        "files": {
            "preview": {
                "matches": "{{name}}\\.hbs",
                "label": "Source",
                "handler": "handlebars"
            },
            "data": {
                "matches": "^data\\.(js|json|yaml|yml)$",
                "label": "Data"
            },
            "styles": {
                "multiple": true,
                "matches": "^.*\\.(css|scss|less)$",
                "label": "Styles"
            },
            "behaviour": {
                "multiple": true,
                "matches": "^(?!data).*\\.(js|coffee)$",
                "label": "Behaviour"
            },
            "readme": {
                "matches": "^readme\\.(md|markdown)$",
                "label": "Readme",
                "handler": "markdown"
            }
        }
    },
    "statuses": {
        "prototype": {
            "label": "Prototype",
            "notes": "Do not implement.",
            "color": "red"
        },
        "wip": {
            "label": "WIP",
            "notes": "Work in progress. Implemement with caution.",
            "color": "orange"
        },
        "ready": {
            "label": "Ready",
            "notes": "Ready to implement.",
            "color": "green",
            "default": true
        }
    }
}