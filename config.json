{
    "dev": false,
    "log": {
        "level": "warn"
    },
    "project": {
        "title": "Fractal"
    },
    "server": {
        "port": 3000
    },
    "exporter": {

    },
    "components": {
        "path": "src/components",
        "files": {
            "preview": {
                "matches": "{{name}}\\.hbs",
                "title": "Source",
                "render": "handlebars"
            },
            "data": {
                "matches": "^data\\.(js|json|yaml|yml)$",
                "title": "Data"
            },
            "styles": {
                "multiple": true,
                "matches": "^.*\\.(css|scss|less)$",
                "title": "Styles"
            },
            "behaviour": {
                "multiple": true,
                "matches": "^(?!data).*\\.(js|coffee)$",
                "title": "Behaviour"
            },
            "notes": {
                "matches": "^readme\\.(md|markdown)$",
                "title": "Notes"
            }
        }
    }
}