{
    "dev": false,
    "log": {
        "level": "warn"
    },
    "project": {
        "title": "Fractal"
    },
    "server": {
        "port": 3000
    },
    "exporter": {

    },
    "theme": "fractal-theme-default",
    "components": {
        "path": "src/components",
        "config": {
            "name": "config\\.(js|json|yml|yaml)",
            "defaults": {
                "name": null,
                "title": null,
                "status": null,
                "label": null,
                "notes": null,
                "view": null,
                "layout": null,
                "styles": {},
                "context": {},
                "variants": []
            }
        },
        "handler": "fractal-handlebars-templates"
    },
    "statuses": {
        "prototype": {
            "label": "Prototype",
            "notes": "Do not implement.",
            "color": "red"
        },
        "wip": {
            "label": "WIP",
            "notes": "Work in progress. Implemement with caution.",
            "color": "orange"
        },
        "ready": {
            "label": "Ready",
            "notes": "Ready to implement.",
            "color": "green",
            "default": true
        }
    }
}