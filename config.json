{
    "dev": false,
    "log": {
        "level": "warn"
    },
    "project": {
        "title": "Fractal",
        "version": null
    },
    "server": {
        "port": 3000
    },
    "exporter": {

    },
    "theme": {
        "name": "fractal-theme-default",
        "config": null
    },
    "components": {
        "path": "src/components",
        "config": "config\\.(js|json|yml|yaml)",
        "readme": "readme\\.(md|markdown)",
        "view": {
            "handler": "handlers/components",
            "file": ["{{component}}--{{variant}}", "{{component}}"],
            "engine": "handlebars",
            "ext": ".hbs"
        },
        "preview": {
            "layout": null,
            "yield": "yield"
        }
    },
    "pages": {
        "path": "src/pages",
        "match": ".*\\.(html|md|markdown)",
        "handler": "handlers/pages/markdown"
    },
    "statuses": {
        "default": "ready",
        "options": {
            "prototype": {
                "name": "prototype",
                "label": "Prototype",
                "description": "Do not implement.",
                "color": "red"
            },
            "wip": {
                "label": "WIP",
                "description": "Work in progress. Implemement with caution.",
                "color": "orange"
            },
            "ready": {
                "label": "Ready",
                "description": "Ready to implement.",
                "color": "green"
            }
        }
    },
    "renderer": {
        "mappings": [
            {
                
            }
        ]
    }
}