{
    "dev": false,
    "log": {
        "level": "warn"
    },
    "project": {
        "title": "Fractal"
    },
    "server": {
        "port": 3000
    },
    "exporter": {

    },
    "theme": "fractal-theme-default",
    "components": {
        "path": "src/components",
        "config": "config\\.(js|json|yml|yaml)",
        "view": {
            "handler": "fractal-handlebars-templates",
            "file": "{{name}}.hbs"
        }
    },
    "statuses": {
        "prototype": {
            "label": "Prototype",
            "notes": "Do not implement.",
            "color": "red"
        },
        "wip": {
            "label": "WIP",
            "notes": "Work in progress. Implemement with caution.",
            "color": "orange"
        },
        "ready": {
            "label": "Ready",
            "notes": "Ready to implement.",
            "color": "green",
            "default": true
        }
    }
}