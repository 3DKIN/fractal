{
    "title": "Fractal",
    "port": 3000,
    "source": {
        "assets": {
            "dir": "src/assets"
        },
        "components": {
            "dir": "src/components",
            "layout": null,
            "matches": {
                "markup": "*.+(hbs|handlebars|html)",
                "data": "data.+(json|js|yml|yaml)",
                "readme": "+(README|readme).+(md|markdown)",
                "behaviour": "*.+(js|coffee)",
                "styles": "*.+(css|scss|less)"
            }
        },
        "docs": {
            "dir": "docs",
            "matches": "*.+(html|md|markdown)"
        }
    },
    "theme": {
        "name": "fractal-theme-default"
    },
    "pipes": [
        {
            "name": "frontmatter",
            "priority": 0,
            "matches": "*.+(html|hbs|md|markdown)"
        },
        {
            "name": "markdown",
            "priority": 1,
            "matches": "*.+(md|markdown)"
        }
    ],
    "lang": {
        
    }
    
}