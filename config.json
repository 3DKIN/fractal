{
    "title": "Fractal",
    "port": 3000,
    "static": null,
    "assets": {
        "dir": "src/assets"
    },
    "components": {
        "dir": "src/components",
        "layout": null,
        "display": "switch",
        "matches": {
            "markup": "*.+(hbs|handlebars|html)",
            "data": "data.+(json|js|yml|yaml)",
            "readme": "+(README|readme).+(md|markdown)",
            "behaviour": "*.+(js|coffee)",
            "styles": "*.+(css|scss|less)"
        }
    },
    "docs": {
        "dir": "docs",
        "matches": "*.+(html|md|markdown)"
    },
    "statuses": {
        "wip": {
            "label": "WIP",
            "notes": "Work in progress. Implemement with caution.",
            "background": "orange",
            "text": "white"
        },
        "complete": {
            "label": "Ready",
            "notes": "Ready for developer implementation.",
            "background": "green",
            "text": "white"
        },
        "prototpe": {
            "label": "Prototype",
            "notes": "Do not implement.",
            "background": "red",
            "text": "white"
        }
    },
    "theme": {
        "name": "fractal-theme-default"
    },
    "pipes": [
        {
            "name": "frontmatter",
            "priority": 0,
            "matches": "*.+(html|hbs|md|markdown)"
        },
        {
            "name": "markdown",
            "priority": 1,
            "matches": "*.+(md|markdown)"
        }
    ],
    "lang": {
        
    }
    
}