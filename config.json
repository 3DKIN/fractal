{
    "title": "Fractal",
    "port": 3000,
    "assets": {
        "dir": "src/assets"
    },
    "components": {
        "dir": "src/components",
        "layout": null,
        "display": "switch",
        "matches": {
            "markup": "*.+(hbs|handlebars|html)",
            "data": "data.+(json|js|yml|yaml)",
            "readme": "+(README|readme).+(md|markdown)",
            "behaviour": "*.+(js|coffee)",
            "styles": "*.+(css|scss|less)"
        },
        "statuses": {
            "wip": {
                "label": "In Progress",
                "color": "yellow"
            },
            "final": {
                "label": "Final",
                "color": "green"
            }
        }
    },
    "docs": {
        "dir": "docs",
        "matches": "*.+(html|md|markdown)"
    },
    "theme": {
        "name": "fractal-theme-default"
    },
    "pipes": [
        {
            "name": "frontmatter",
            "priority": 0,
            "matches": "*.+(html|hbs|md|markdown)"
        },
        {
            "name": "markdown",
            "priority": 1,
            "matches": "*.+(md|markdown)"
        }
    ],
    "lang": {
        
    }
    
}