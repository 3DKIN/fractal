{% extends '__system/skeleton.nunj' %}

{% set page = {
    type: 'error',
    title: frctl.request.error.name
} %}

{% block body %}
<div class="Error">

    <div class="Error-message">
    {{ frctl.request.error.message | markdown }}
    </div>

    {% if frctl.request.error.stack %}
    <code class="Error-stack">
        <pre>{{ frctl.request.error.stack }}</pre>
    </code>
    {% endif %}
</div>
{% endblock %}
